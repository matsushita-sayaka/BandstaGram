<h1>Edit Comment</h1>
<br><br>

<%= form_for @photo, :html => { multipart: true } do |f| %>
<br>

  <div class="field">
    <%= f.label :Content %><br />
    <%= f.text_area :content, :class => "form-control my-form" %>
  </div>  

<br>
  <div class="actions">
    <%= f.submit "Update!", :class => "btn btn-default" %>
  </div>
<% end%>
