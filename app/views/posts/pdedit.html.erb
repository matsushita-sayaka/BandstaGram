<h1>You wan to replace this file?</h1>
<br><br>
  <% @filename = @post_detail.file_name.split(".")[0] %>
  <% if @post_detail.file_type == "mp4" || @post_detail.file_type == "webm" || @post_detail.file_type == "m4v" %>
    <%= video_tag "/pics/#{@post_detail.post_id}/#{@filename}.#{@post_detail.file_type}", autoplay: true, muted: true, loop: true, :class => "replacevideopreview" %>
  <% else %>
    <%= image_tag "/pics/#{@post_detail.post_id}/#{@filename}.#{@post_detail.file_type}", :class => "replacepreview" %>
  <% end %>  
    
